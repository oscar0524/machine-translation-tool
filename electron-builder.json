{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "app/**/*.js",
    "dist/**/*"
  ],
  "asarUnpack": [
    "dist/assets/database/sqlite.db"
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}